{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./__tests__/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src"]
}
